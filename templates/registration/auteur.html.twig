{% extends 'base.html.twig' %}

{% block title %}{% endblock%}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src=" {{ user.avatar }} " alt="">
            <button class="btn btn-info">{{ user.annonces|length }} annonces</button>
        </div>
            <div class="col-md-8">
                <h2>{{ user.username }}</h2>
                <h2>{{ user.lastname }}</h2>
                <p>{{ user.description }}</p>
            </div>
        {% if user.annonces|length == 0 %}             
            <div class="row">
                <div class="alert alert-secondary col-md-6 offset-3" role="alert">
                {{ user.username|capitalize }} n'a pas encore publi√© d'annonce !
                </div>
                </div>
        {% else %}
            <div class="row">
            {% for annonce in user.annonces %}
                <div class="col-md-3">
                <div class="card" style="width: 16rem;">
                <img src=" {{ annonce.coverImage }} " class="card-img-top" alt="...">
                <div class="card-body">
                <h5 class="card-title">{{ annonce.titre }}</h5>
                <p class="card-text">{{annonce.description}}</p>
                <a href="{{ path('annonces_show', {'id':annonce.id }) }}" class="btn btn-dark">Voir plus</a>
                </div>
                </div>
                </div>
           
        {% endfor %} 
        {% endif %}
        </div>
        
    </div>
</div>
{% endblock%}